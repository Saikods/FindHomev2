<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="62dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/house" />

                <TextView
                    android:id="@+id/txtTitlePostrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/title_postrent"
                    android:textSize="22sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerImagesPostrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="16dp">

                </androidx.recyclerview.widget.RecyclerView>

                <ImageView
                    android:id="@+id/imgZeroPostrent"
                    android:layout_width="180dp"
                    android:layout_height="174dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/addphoto" />

                <Button
                    android:id="@+id/btnUploadPhotosPostrent"
                    android:layout_width="92dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_rounded"
                    android:text="@string/upload_photos"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="650dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/info_postrent"
                        android:textSize="19sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:entries="@array/kind_rent" />

                    <EditText
                        android:id="@+id/txtDescriptionPostrent"
                        android:layout_width="292dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="@string/description_postrent"
                        android:inputType="textMultiLine|textPersonName" />

                    <EditText
                        android:id="@+id/txtProvincePostRent"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="@string/province_postrent"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/txtTownPostrent"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="@string/town_postrent"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/txtStreetNamePostrent"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="@string/street_postrent"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/txtPricePostrent"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="@string/price_postrent"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/btnPostrentPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_rounded"
                        android:text="Publicar" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>